<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon test">
    <!--cloud setup-->
    <parameter name="useCloudEnv" value="false"></parameter>
    <parameter name="envName" value="browserstack"></parameter>
    <parameter name="browserVersion" value="80"></parameter>
    <parameter name="osVersion" value="Sierra"></parameter>
    <!--cloud and local setup-->
    <parameter name="os" value="OS X"></parameter>
    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="url" value="https://www.amazon.com"></parameter>

    <test name="search">
        <classes>
            <!--<class name="test.amazon.TestSearchSingleItems"></class>-->
            <class name="test.amazon.TestSearchMultipleItems"></class>
        </classes>
    </test>
    <test name="Floating menu">
        <classes>
            <!--<class name="test.amazon.TestFloatingMenu"></class>-->
        </classes>
    </test>
</suite>